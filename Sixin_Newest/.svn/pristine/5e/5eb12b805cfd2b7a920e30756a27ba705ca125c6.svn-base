<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="10dip" >
    
    <RelativeLayout
        android:id="@+id/one_plugin_area"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        >
        
     <LinearLayout 
	    android:id="@+id/plugin_area"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
     >

    <TextView
        android:id="@+id/plugin_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="10dip"
        android:lineSpacingMultiplier="1.2"
        android:ellipsize="none"
        android:maxLines="1"
        android:shadowColor="#88000000"
        android:shadowRadius="2.0"
        android:text="人人好友特别关注"
        android:textColor="@color/Color_C"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/plugin_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/plugin_title"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:lineSpacingMultiplier="1.2"
        android:minLines="2"
        android:maxLines="2"
        android:ellipsize="end"
        android:shadowColor="#88000000"
       	android:shadowRadius="2.0"
        android:text="在寂寞的田野上......"
        android:textColor="@color/Color_C"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="fill_parent" android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/plugin_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:scaleType="center"
         />

    <LinearLayout
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
    <RelativeLayout
        android:id="@+id/message_num_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom"
        android:paddingRight="6dip"
        android:paddingBottom="6dip"
         >

         <TextView
                android:id="@+id/plugin_message_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:includeFontPadding="false"
                android:paddingLeft="6dip"
                android:paddingRight="6dip"
                android:gravity="center"
                android:text="@string/new_chat_session_screen_list_item_layout_1"
                android:textColor="@color/Color_C"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/contact_message_tip"
                />
    </RelativeLayout>
    </LinearLayout>>
</LinearLayout>
        
        </RelativeLayout>
    <FrameLayout
        android:layout_height="wrap_content"
        android:layout_width="10dip"/>
    
   <RelativeLayout
       android:id="@+id/another_plugin_area"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        >
        
       
	<LinearLayout 
	    android:id="@+id/plugin_area"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
     >

    <TextView
        android:id="@+id/another_plugin_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="10dip"
        android:lineSpacingMultiplier="1.2"
        android:ellipsize="none"
        android:maxLines="1"
        android:shadowColor="#88000000"
        android:shadowRadius="2.0"
        android:text="人人好友特别关注"
        android:textColor="@color/Color_C"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/another_plugin_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/plugin_title"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:lineSpacingMultiplier="1.2"
        android:minLines="2"
        android:maxLines="2"
        android:ellipsize="end"
        android:shadowColor="#88000000"
        android:shadowRadius="2.0"
        android:text="在寂寞的田野上......"
        android:textColor="@color/Color_C"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="fill_parent" android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/another_plugin_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:scaleType="center"
       />

    <LinearLayout
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
    <RelativeLayout
        android:id="@+id/message_num_layout_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom"
        android:paddingRight="6dip"
        android:paddingBottom="6dip"
         >

         <TextView
                android:id="@+id/another_plugin_message_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:includeFontPadding="false"
                android:paddingLeft="6dip"
                android:paddingRight="6dip"
                android:gravity="center"
                android:text="@string/new_chat_session_screen_list_item_layout_1"
                android:textColor="@color/Color_C"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/contact_message_tip"
                />
    </RelativeLayout>
    </LinearLayout>>
</LinearLayout>
       
 </RelativeLayout>
 
</LinearLayout>