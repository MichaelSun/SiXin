<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        >
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:paddingTop="25dip"
	    android:paddingLeft="10dip"
	    android:paddingRight="10dip"
	    android:orientation="vertical" >
	    <TextView 
	        android:id="@+id/tv_guidance"
	        android:paddingTop="0dip"
	        android:paddingBottom="4dip"
	        android:layout_height="wrap_content"
	        android:layout_width="fill_parent"
	        android:text=""
	        android:textSize="14sp"
	        android:textColor="#ff000000"
	        />
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        >
	        
	        <LinearLayout 
	            android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:gravity=""
		        android:orientation="vertical"
	            >
	            <EditText 
			        android:id="@+id/et_phone_or_email"
			        android:layout_marginTop="2dip"
			        android:layout_width="fill_parent"
			        android:layout_height="@dimen/ykn_common_height_edittext"
			        android:hint="@string/ykn_register_edittext"
			        android:singleLine="true"
			        />
	            <EditText 
			        android:id="@+id/et_captcha"
			        android:layout_marginTop="2dip"
			        android:layout_width="fill_parent"
			        android:layout_height="@dimen/ykn_common_height_edittext"
			        android:hint="@string/ykn_register_captcha"      android:singleLine="true"
			        />
			    
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:layout_width="110dip"
	            android:layout_height="@dimen/ykn_common_height_button"
	            android:paddingLeft="3dip"
	            android:paddingTop="1dip"
	            android:paddingBottom="2dip"
	            android:layout_weight="0"
	            >
	            <Button 
			        android:id="@+id/btn_get_captcha"
			        android:layout_height="fill_parent"
			        android:layout_width="fill_parent"
			        android:background="@drawable/ykn_button_background_green"
			        android:text="@string/ykn_register_button_normal"
			        />
	        </LinearLayout>
	        
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/ykn_common_height_button"
	        android:layout_marginTop="5dip"
	        >
	        <Button 
		        android:id="@+id/btn_check_in"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:background="@drawable/ykn_button_background_blue"
		        android:text="@string/ykn_register_submit"
		        />
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:paddingTop="5dip"
	        >
	        <TextView 
	            android:id="@+id/tv_hint"
	            android:visibility="gone"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text=""
		        android:textSize="14sp"
		        android:textColor="#ff000000"/>
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>