<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
    <TableLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:stretchColumns="1">
- <TableRow>
  <TextView android:text="URI" android:id="@+id/urlView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="18dp" android:textColor="@color/black" /> 
  <EditText android:text="" android:id="@+id/urlEditText" android:layout_width="fill_parent" android:layout_height="wrap_content" /> 
  </TableRow>
- <TableRow>
  <TextView android:text="HOST" android:id="@+id/hostView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="18dp" android:textColor="@color/black" /> 
  <EditText android:text="" android:id="@+id/hostEditText" android:layout_width="fill_parent" android:layout_height="wrap_content" /> 
  </TableRow>
  <TableRow>
  <TextView android:text="HTTP" android:id="@+id/httpView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="18dp" android:textColor="@color/black" /> 
  <EditText android:text="" android:id="@+id/httpEditText" android:layout_width="fill_parent" android:layout_height="wrap_content" /> 
  </TableRow>
   <TableRow>
  <TextView android:text="SOCKET" android:id="@+id/socketView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="18dp" android:textColor="@color/black" /> 
  <EditText android:text="" android:id="@+id/socketEditText" android:layout_width="fill_parent" android:layout_height="wrap_content"/> 
  </TableRow>
- <TableRow android:gravity="right">

  <Button android:text="测试" android:id="@+id/loginButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="20dp" android:textColor="@color/black" /> 
  </TableRow>
     </TableLayout>


</LinearLayout>