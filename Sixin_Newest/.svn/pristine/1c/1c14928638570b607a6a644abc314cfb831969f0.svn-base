<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="2dip"
    android:paddingRight="2dip" >

    <TextView
        android:id="@+id/cdw_listview_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dip"
        android:paddingLeft="12dip"
        android:paddingRight="12dip"
        android:paddingTop="4dip"
        android:paddingBottom="4dip"
        android:background="@drawable/cdw_chat_listview_item_time_bg"
        android:gravity="center"
        android:shadowRadius="1"
        android:textSize="12sp"
        android:text="@string/cdw_listview_item_layout_1"
        android:textColor="#FFFFFF" />

    <include
        android:layout_weight="1.0"
        layout="@layout/cdw_listview_item_from" />

    <include
        android:layout_weight="1.0"
        layout="@layout/cdw_listview_item_to" />

    <TextView
        android:id="@+id/chat_item_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="12dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/cdw_chat_listview_item_time_bg"
        android:gravity="center"
        android:paddingBottom="4dip"
        android:paddingLeft="12dip"
        android:paddingRight="12dip"
        android:paddingTop="4dip"
        android:text="@string/cdw_listview_item_layout_2"
        android:textSize="14sp"
        android:textColor="#FFFFFF" 
        android:lineSpacingExtra="4dip"/>

    <View
        android:id="@+id/chat_item_null"
        android:layout_width="fill_parent"
        android:layout_height="2dip" />

</LinearLayout>