<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent" android:layout_height="fill_parent"
             android:background="@color/main_background">
  <LinearLayout
          android:id="@+id/chat_message_container"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:orientation="vertical">
    <include
            android:id="@+id/title_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/base_title_layout"/>
    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <ScrollView
                android:id="@+id/chat_message_scrollView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
          <LinearLayout
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:orientation="vertical"
                  android:paddingTop="16dip"
                  android:paddingBottom="15dip"
                  android:paddingLeft="10dip"
                  android:paddingRight="10dip">
            <LinearLayout
                    android:id="@+id/group_name_frameLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="46dip"
                    android:layout_marginBottom="16dip"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:background="@drawable/single_bg_selector">
              <TextView
                      android:id="@+id/group_name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:layout_marginLeft="12dip"
                      android:text="@string/chatmessages_layout_1"
                      android:textColor="@color/list_item_text_color"
                      android:duplicateParentState="true"
                      android:textSize="18sp"/>
              <TextView
                      android:id="@+id/group_name_textView"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="center_vertical|right"
                      android:layout_gravity="center_vertical"
                      android:ellipsize="end"
                      android:layout_marginRight="12dip"
                      android:layout_marginLeft="12dip"
                      android:singleLine="true"
                      android:text="@string/chatmessages_layout_2"
                      android:textColor="@color/setting_item_textb_color"
                      android:duplicateParentState="true"
                      android:textSize="18sp"/>
              <ImageView
                      android:id="@+id/group_name_imageView"
                      android:layout_width="28dip"
                      android:layout_height="42dip"
                      android:layout_gravity="center_vertical"
                      android:duplicateParentState="true"
                      android:background="@drawable/setting_arrow_selector"/>
            </LinearLayout>
            <FrameLayout
                    android:id="@+id/grid_view_container"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/chat_message_bg"
                    android:paddingBottom="12dip"
                    android:paddingLeft="6dip"
                    android:paddingRight="6dip"
                    android:layout_marginBottom="16dip">
              <com.renren.mobile.chat.ui.groupchat.ChatMessageGridView
                      android:id="@+id/gride"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:gravity="center_horizontal"
                      android:layout_gravity="center_horizontal"
                      android:groupIndicator="@null"
                      android:horizontalSpacing="0px"
                      android:verticalSpacing="0px"
                      android:listSelector="@drawable/mm_chat_listitem"/>
            </FrameLayout>
              <!--<TextView-->
                      <!--android:id="@+id/member_number"-->
                      <!--android:layout_width="wrap_content"-->
                      <!--android:layout_height="wrap_content"-->
                      <!--android:layout_gravity="left|top"-->
                      <!--android:layout_marginLeft="18dip"-->
                      <!--android:layout_marginTop="12dip"-->
                      <!--android:textColor="#FFFFFF"/>-->
              <!--<Button-->
                      <!--android:id="@+id/editor_btn"-->
                      <!--android:layout_width="wrap_content"-->
                      <!--android:layout_height="wrap_content"-->
                      <!--android:layout_gravity="right|top"-->
                      <!--android:layout_marginRight="9dip"-->
                      <!--android:layout_marginTop="6dip"-->
                      <!--android:background="@drawable/member_editor_btn"-->
                      <!--android:text="@string/chatmessages_layout_4"-->
                      <!--android:textColor="#FFFFFF"-->
                      <!--android:textSize="11sp"/>-->
            <FrameLayout
                    android:id="@+id/save_contact_frameLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="46dip"
                    android:background="@drawable/top_bg_selector"
                    android:visibility="gone">
              <TextView
                      android:id="@+id/save_contact"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:layout_marginLeft="12dip"
                      android:text="@string/chatmessages_layout_5"
                      android:textColor="@color/list_item_text_color"
                      android:duplicateParentState="true"
                      android:textSize="18sp"/>
            </FrameLayout>
            <LinearLayout
                    android:id="@+id/syn_record_linearlayout"
                    android:layout_width="fill_parent"
                    android:layout_height="46dip"
                    android:orientation="horizontal"
                    android:background="@drawable/middle_bg_selector"
                    android:visibility="gone">
              <TextView
                      android:id="@+id/syn_record"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:layout_marginLeft="12dip"
                      android:text="@string/chatmessages_layout_10"
                      android:textColor="@color/list_item_text_color"
                      android:duplicateParentState="true"
                      android:singleLine="true"
                      android:textSize="18sp"/>
              <TextView
                      android:id="@+id/syn_record_info"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:layout_marginRight="12dip"
                      android:layout_marginLeft="12dip"
                      android:layout_weight="1"
                      android:textColor="@color/setting_item_textb_color"
                      android:duplicateParentState="true"
                      android:textSize="12sp"/>
            </LinearLayout>
            <FrameLayout
                    android:id="@+id/clear_record_frameLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="46dip"
                    android:background="@drawable/bottom_bg_selector"
                    android:visibility="gone">
               <TextView
                      android:id="@+id/clear_record"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:layout_marginLeft="12dip"
                      android:text="@string/chatmessages_layout_6"
                      android:textColor="@color/list_item_text_color"
                      android:duplicateParentState="true"
                      android:textSize="18sp"/>
            </FrameLayout>
            <LinearLayout
                    android:id="@+id/third_user_prompt_linearlayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dip"
                    android:orientation="horizontal"
                    android:visibility="gone">
                <ImageView
                        android:id="@+id/prompt_icon"
                        android:layout_width="14dip"
                        android:layout_height="14dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dip"
                        android:scaleType="centerCrop"
                        android:src="@drawable/chat_setting_unsixin_notify"/>
                <TextView
                        android:id="@+id/prompt_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dip"
                        android:textColor="@color/common_b"
                        android:text="@string/chatmessages_layout_12"
                        android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/group_message_notify_linearlayout"
                    android:layout_width="fill_parent"
                    android:layout_height="46dip"
                    android:layout_marginTop="16dip"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:background="@drawable/single_bg_selector">
                <TextView
                        android:id="@+id/group_message_notify"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dip"
                        android:text="@string/chatmessages_layout_11"
                        android:textColor="@color/list_item_text_color"
                        android:duplicateParentState="true"
                        android:textSize="18sp"/>
                <TextView
                        android:id="@+id/group_message_notify_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="2dip"
                        android:text="@string/SettingScreen_java_4"
                        android:textColor="@color/setting_item_textb_color"
                        android:duplicateParentState="true"
                        android:textSize="14sp"/>
                <ImageView
                        android:id="@+id/group_message_notify_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/setting_selector"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerCrop"/>
            </LinearLayout>
            <Button
                    android:visibility="gone"
                    android:id="@+id/exit_group_button"
                    android:layout_width="fill_parent"
                    android:layout_height="46dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dip"
                    android:background="@drawable/common_red_btn_selector"
                    android:text="@string/chatmessages_layout_7"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"/>
            <FrameLayout
                    android:id="@+id/del_group_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="46dip"
                    android:layout_marginBottom="16dip"
                    android:visibility="gone"
                    android:background="@drawable/single_bg_selector">
              <TextView
                      android:id="@+id/del_contact"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:layout_marginLeft="12dip"
                      android:text="@string/chatmessages_layout_8"
                      android:textColor="@color/list_item_text_color"
                      android:duplicateParentState="true"
                      android:textSize="18sp"/>
            </FrameLayout>
            <!-- buttons start -->
            <Button
                    android:id="@+id/start_chat_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="46dip"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/common_blue_btn_selector"
                    android:gravity="center"
                    android:text="@string/chatmessages_layout_9"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:visibility="gone"/>
          </LinearLayout>
        </ScrollView>
        <ImageView
                android:layout_height="4dip"
                android:layout_width="fill_parent"
                android:src="@drawable/common_title_driver"
                android:scaleType="fitXY"/>
    </FrameLayout>
  </LinearLayout>
</FrameLayout>
