	public static void bleachList(List<SearchAble> contactList) {
		if (contactList != null && contactList.size() != 0) {
			ContactModel tmp;
			for (SearchAble item : contactList) {
				tmp=(ContactModel) item;
				tmp.setMatched(false);
				if (tmp.isHaveDyed())
					tmp.bleach();
			}
		}
	}

	
