<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:gravity="center_vertical">
	<!-- sixin action -->
	<FrameLayout android:id="@+id/sixin_action_layout"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="center_vertical" android:clickable="true">
		<ImageView android:id="@+id/sixin_action_icon"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<TextView android:id="@+id/sixin_action_title"
			android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:layout_gravity="right" android:layout_marginTop="14dip"
			android:layout_marginRight="20dip" android:textSize="16sp"
			android:textColor="@color/light_gray" />
	</FrameLayout>
	<!-- forward action -->
	<FrameLayout android:id="@+id/forward_action_layout"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:gravity="center_vertical" android:layout_gravity="center_vertical"
		android:clickable="true">
		<ImageView android:id="@+id/forward_action_icon"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<TextView android:id="@+id/forward_action_title"
			android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:layout_gravity="right" android:layout_marginTop="14dip"
			android:layout_marginRight="34dip" android:textSize="16sp"
			android:textColor="@color/light_gray" />
	</FrameLayout>
</LinearLayout>
