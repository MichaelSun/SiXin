<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="0.25"
    android:background="@drawable/y_main_bottom_focused" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-18dip"
        android:clickable="false"
        android:src="@drawable/cy_sixin_focused" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon"
        android:layout_centerHorizontal="true"
        android:text="@string/y_main_layout_1"
        android:textSize="12sp" />
    <!-- 占位 -->

    <View
        android:layout_width="8dip"
        android:layout_height="4dip"
        android:layout_centerInParent="true"
        android:background="#00ff00"
        android:clickable="false"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/new_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dip"
        android:layout_marginTop="4dip"
        android:background="@drawable/chat_num_tip_small"
        android:clickable="false"
        android:gravity="center"
        android:text="@string/y_main_layout_2"
        android:textColor="#ffffff"
        android:textSize="10sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/red_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dip"
        android:layout_marginTop="4dip"
        android:src="@drawable/s_red_pot"
        android:visibility="gone" />
</RelativeLayout>