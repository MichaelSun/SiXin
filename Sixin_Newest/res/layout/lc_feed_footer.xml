<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" android:layout_height="50dip">
  <FrameLayout android:id="@+id/lc_feed_footer_layout" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@drawable/sms_item_default" android:orientation="vertical">
    <View android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/listview_item_divider"/>
    <RelativeLayout android:id="@+id/lc_feed_footer_more" android:layout_width="fill_parent" android:layout_height="fill_parent" android:visibility="visible" android:layout_gravity="center" android:padding="8dip">
      <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" android:textSize="12sp" android:textColor="#5c5c5c" android:text="@string/lc_feed_footer_layout_1"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/lc_feed_footer_load" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_gravity="center" android:visibility="gone">
      <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" android:orientation="horizontal">
        <ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" style="@android:style/Widget.ProgressBar.Small"/>
        <TextView android:layout_marginLeft="4dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/lc_feed_footer_layout_2" android:textSize="12sp" android:textColor="#5c5c5c" android:layout_gravity="center"/>
      </LinearLayout>
    </RelativeLayout>
  </FrameLayout>
</LinearLayout>
