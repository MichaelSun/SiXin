<!--             android:layout_height="wrap_content" -->
<!--             android:layout_gravity="top|right" -->
<!--             android:layout_marginRight="8dip" -->
<!--             android:layout_marginTop="2dip" -->
<!--             android:src="@drawable/d_close_btn_selected" /> -->
    </FrameLayout>

</LinearLayout>