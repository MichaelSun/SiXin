<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/voice_root"
    android:layout_width="200dip"
    android:layout_height="200dip">
     	<ImageView
     	    android:id="@+id/back_image"
        	android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
         	android:src="@drawable/voice_time_bg"
         	android:visibility="gone"
         	android:layout_gravity="center"
        />
     	<ImageView
     		android:id="@+id/voice1"
        	android:layout_width="fill_parent"
    		android:layout_height="fill_parent" 
         	android:src="@drawable/voice1"  
         	android:visibility="gone"
         	android:layout_gravity="center"
     	/>
     	<ImageView
     		android:id="@+id/voice2"
        	android:layout_width="fill_parent"
    		android:layout_height="fill_parent" 
         	android:src="@drawable/voice2" 
         	android:visibility="gone" 
         	android:layout_gravity="center"
     	/>
     	<ImageView
     		android:id="@+id/voice3"
        	android:layout_width="fill_parent"
    		android:layout_height="fill_parent" 
         	android:src="@drawable/voice3"  
         	android:visibility="gone" 
         	android:layout_gravity="center"
     	/>
     	<ImageView
     		android:id="@+id/voice4"
        	android:layout_width="fill_parent"
    		android:layout_height="fill_parent" 
         	android:src="@drawable/voice4"  
         	android:visibility="gone" 
         	android:layout_gravity="center"
     	/>
     	
     	<ImageView
     	    android:id="@+id/bin"
        	android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
         	android:src="@drawable/voice_bin"
         	android:visibility="gone"
         	android:layout_gravity="center"
        />
     	<ImageView
     	    android:id="@+id/voice_to_short"
        	android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
         	android:src="@drawable/voice_to_short"
         	android:visibility="gone"
         	android:layout_gravity="center"
        />
     	<ImageView
     	    android:id="@+id/voice_speaker"
        	android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
         	android:src="@drawable/speaker"
         	android:layout_gravity="center"
        />
        <TextView 
            android:id="@+id/voice_time"
        	android:layout_width="fill_parent"
    		android:layout_height="fill_parent"  
    		android:text="0S"
    		android:textSize="60sp"
    		android:textColor="#ffffff"
    		android:visibility="gone"
    		android:layout_gravity="center"
        />
        
</FrameLayout>