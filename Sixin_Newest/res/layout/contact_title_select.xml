<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="horizontal"
              android:gravity="center"
              android:visibility="gone"
              android:id="@+id/contact_title_middle">
    <FrameLayout
            android:id="@+id/title_select_left"
            android:layout_height="34dip"
            android:layout_width="74dip"
            android:background="@drawable/contact_title_left_selector">
        <TextView
                android:gravity="center"
                android:id="@+id/title_select_left_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:text="@string/C_ContactScreen_java_1"
                android:textColor="@color/contact_title_select_text_color"
                android:layout_gravity="center"/>
    </FrameLayout>
    <FrameLayout
            android:id="@+id/title_select_middle"
            android:layout_height="34dip"
            android:layout_width="74dip"
            android:background="@drawable/contact_title_right_selector">
        <TextView
                android:gravity="center"
                android:id="@+id/title_select_middle_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:text="@string/C_ContactScreen_java_2"
                android:textColor="@color/contact_title_select_text_color"
                android:layout_gravity="center"/>
    </FrameLayout>
    <FrameLayout
            android:id="@+id/title_select_right"
            android:layout_height="34dip"
            android:layout_width="74dip"
            android:visibility="gone"
            android:background="@drawable/contact_title_right_selector">
        <TextView
                android:gravity="center"
                android:id="@+id/title_select_right_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:text="@string/GroupContactModel_java_1"
                android:textColor="@color/contact_title_select_text_color"
                android:layout_gravity="center"/>
    </FrameLayout>

</LinearLayout>