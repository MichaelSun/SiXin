<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        >
    </LinearLayout>
    
    <FrameLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        
        <View 
            android:layout_width="fill_parent"
            android:layout_height="6dip"
            android:background="@drawable/title_shadow"
            />
    
        <ScrollView 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:paddingLeft="@dimen/ykn_common_horizontal"
			    android:paddingRight="@dimen/ykn_common_horizontal"
		        android:orientation="vertical"
		        >
		        
		        <!-- <LinearLayout 
		            android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical"
			        android:gravity="center"
		            >
		            
		            <ImageView
		                android:id="@+id/avatar"
		                android:layout_width="80dip"
		                android:layout_height="80dip"
		            	/>
		            
		            <TextView 
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:paddingTop="5dip"
		                android:paddingBottom="5dip"
		                android:gravity="center"
		                android:text="@string/ykn_register_info_hint"
		                />
		            
		        </LinearLayout> -->
		        
		        <LinearLayout 
		            android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical">
			        
		            <TextView 
		                android:paddingTop="@dimen/ykn_common_vertical"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:text="@string/ykn_register_info_hint1"
		                android:textSize="14sp"
			        	android:textColor="@color/Color_B"
		                />
		            
		            <EditText 
		                android:id="@+id/et_realname"
		                android:layout_marginTop="@dimen/ykn_common_vertical"
		                android:layout_width="fill_parent"
		                android:layout_height="@dimen/ykn_common_height_edittext"
		                android:hint="@string/ykn_register_info_realname"
		                android:textSize="@dimen/ykn_common_textsize_edittext"
				        android:textColorHint="@color/Color_D"
		                android:singleLine="true"
		                android:maxLength="60"
		                android:background="@drawable/ykn_edittext_background"
		                />
		            
		            <LinearLayout 
		                android:paddingTop="10dip"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:paddingLeft="22dip"
		                android:paddingRight="22dip"
		                android:orientation="horizontal"
		                android:gravity="center"
		                >
		                
		                <LinearLayout 
		                    android:id="@+id/btn_male"
		                    android:layout_height="40dip"
		                    android:layout_width="wrap_content"
		                    android:background="@drawable/ykn_button_gender_normal"
		                    android:layout_weight="1"
		                    android:gravity="center"
		                    >
		                    <ImageView 
		                        android:id="@+id/male"
		                        android:layout_width="20dip"
		                        android:layout_height="20dip"
		                        android:background="@drawable/ykn_male_normal"
		                        />
		                    <TextView
		                        android:id="@+id/tv_male"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:text="@string/ykn_register_info_male"
		                        android:textColor="@color/Color_B"
		                        android:textSize="16sp"
		                        />
	                    </LinearLayout>
		                
		                <View 
		                    android:layout_height="fill_parent"
		                    android:layout_width="36dip"/>
		                
		                <LinearLayout 
		                    android:id="@+id/btn_female"
		                    android:layout_height="40dip"
		                    android:layout_width="wrap_content"
		                    android:background="@drawable/ykn_button_gender_normal"
		                    android:layout_weight="1"
		                    android:gravity="center"
		                    >
		                    <ImageView 
		                        android:id="@+id/female"
		                        android:layout_width="20dip"
		                        android:layout_height="20dip"
		                        android:background="@drawable/ykn_female_normal"
		                        />
		                    <TextView
		                        android:id="@+id/tv_female"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:text="@string/ykn_register_info_female"
		                        android:textColor="@color/Color_B"
		                        android:textSize="16sp"
		                        />
		                </LinearLayout>
		                
		            </LinearLayout>
		            
		            <TextView 
		                android:paddingTop="@dimen/ykn_common_vertical"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:text="@string/ykn_register_info_hint2"
		                android:textSize="14sp"
			        	android:textColor="@color/Color_B"
		                />
		            
		            <EditText 
		                android:id="@+id/et_password"
		                android:layout_marginTop="@dimen/ykn_common_vertical"
		                android:layout_width="fill_parent"
		                android:layout_height="@dimen/ykn_common_height_edittext"
		                android:hint="@string/ykn_register_info_password"
		                android:textSize="@dimen/ykn_common_textsize_edittext"
				        android:textColorHint="@color/Color_D"
		                android:password="true"
		                android:singleLine="true"
		                android:maxLength="20"
		                android:background="@drawable/ykn_edittext_background"
		                />
		            
		            <EditText 
		                android:id="@+id/et_confirm"
		                android:layout_marginTop="@dimen/ykn_common_vertical"
		                android:layout_width="fill_parent"
		                android:layout_height="@dimen/ykn_common_height_edittext"
		                android:hint="@string/ykn_register_info_confirm"
		                android:textSize="@dimen/ykn_common_textsize_edittext"
				        android:textColorHint="@color/Color_D"
		                android:password="true"
		                android:singleLine="true"
		                android:maxLength="20"
		                android:background="@drawable/ykn_edittext_background"
		                />
		            
		            <Button 
		                android:id="@+id/btn_submit"
		                android:layout_marginTop="@dimen/ykn_common_vertical"
		                android:layout_marginBottom="@dimen/ykn_common_vertical"
		                android:layout_width="fill_parent"
		                android:layout_height="@dimen/ykn_common_height_button"
		                android:text="@string/ykn_register_info_submit"
		                android:textColor="@color/Color_C"
				        android:textSize="@dimen/ykn_common_textsize_button"
		                android:background="@drawable/ykn_button_background_blue"
		                />
		            
		        </LinearLayout>
		        
		    </LinearLayout>
        </ScrollView>
	    
    
	</FrameLayout>
	    
</LinearLayout>