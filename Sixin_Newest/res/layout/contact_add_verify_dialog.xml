<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:id="@+id/contact_add_dialog"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/contact_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_verify" />

    <TextView
        android:id="@+id/contact_verify2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_verify2" />

    <EditText
        android:id="@+id/contact_verify_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/contact_verify_hint"
        android:ems="10" >
        <requestFocus />    </EditText>

</LinearLayout>